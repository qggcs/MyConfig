set number
set autoindent
" tab to space
set expandtab
set relativenumber
set cursorline
"  highlight brackets
set showmatch
set hlsearch
set incsearch
set ignorecase
set showcmd
set showmode

" support mouse
set mouse=a
set encoding=utf-8
" enable 256 colors
set t_Co=256
set tabstop=2
set softtabstop=2

syntax on
" file type check
filetype indent on
